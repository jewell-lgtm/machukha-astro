---
import Navbar from "../component/Navbar.astro";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>MACHUKHA - {title}</title>
  </head>
  <body class="relative z-0 min-h-screen font-serif text-white">
    <Navbar />

    <slot />
  </body>
  <style is:global>
    html {
      background-color: #050a08;
      min-height: 100vh;
      min-width: 100vw;
    }
    body {
      position: relative;
      z-index: 1;
    }
    body::after {
      display: block;
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: #050a08;
      z-index: -2;
      opacity: 0.013;
      background-repeat: no-repeat;
      background-image: url("/logo.png");
    }
    body::before {
      z-index: -1;
      display: block;
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #050a08;
      opacity: 0.1;
      background-image: url("/bg.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      pointer-events: none;
    }

    @media (min-width: 768px) {
      body::before {
        background-size: contain;
        background-position: right;
      }
    }

    .small-caps {
      font-variant-caps: small-caps;
    }
    a {
      @apply cursor-pointer text-white hover:text-gray-300;
    }

    [x-cloak] {
      display: none !important;
    }

    .text-h1 {
      @apply mb-4 text-3xl font-semibold tracking-tight sm:text-4xl;
      font-variant-caps: small-caps;
    }

    .text-subtitle {
      @apply text-lg font-light italic sm:text-xl;
    }
  </style>
</html>
